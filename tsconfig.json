{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/ts/*",
        "generated/ts/*"
      ]
    },
    "types": [],
    "target": "ESNext", 
    "module": "commonjs",
    "declaration": false,
    "downlevelIteration": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true
  }
}